        transition-duration: .5s;
        margin-top: 15px;
    }



    #button:hover {
        background: white;
        border: 1px solid #bd222e;
        color: black;
        cursor: pointer;

    }

    #after_submit {
        visibility: hidden;
        background: #bd222e;
        padding: 10px 20px 10px 20px;
